<UserControl x:Class="SoftwareFromClick.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>

        <!-- Right column - Result -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Generated Code" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Action buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,10,0">
                    <Button Content="Copy to Clipboard" Width="130" Height="30" BorderThickness="0"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1">
                    <Button Content="Save to File" Width="100" Height="30" BorderThickness="0"/>
                </Border>
            </StackPanel>

            <!-- Code Editor -->
            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="CodeTextBox"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             FontFamily="Consolas"
                             FontSize="12"
                             BorderThickness="0"
                             Padding="10"/>
                </ScrollViewer>
            </Border>

            <!-- Bottom buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,10,0">
                    <Button Content="New Query" Width="100" Height="35" BorderThickness="0" Click="NewQueryButton_Click"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1">
                    <Button Content="Edit Query" Width="100" Height="35" BorderThickness="0" Click="EditQueryButton_Click"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>