<Window x:Class="SoftwareFromClick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SoftwareFromClick" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left column -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- History with ScrollBar -->
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="history" Margin="5" FontWeight="Bold"/>
                        <ListView BorderThickness="0">
                            <ListViewItem Content="query"/>
                            <ListViewItem Content="query"/>
                            <ListViewItem Content="query"/>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Settings Button -->
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
                <Button Content="settings" Height="30" Margin="5" Click="SettingsButton_Click"/>
            </Border>
        </Grid>

        <!-- Right column - ContentControl for switching views -->
        <ContentControl x:Name="MainContentControl" Grid.Column="1">
            <!-- Welcome screen -->
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- Welcome text -->
                    <Border BorderBrush="Black" BorderThickness="1" Padding="20" Margin="0,0,0,40">
                        <TextBlock Text="Welcome to SoftwareFromClick" FontSize="16" TextAlignment="Center"/>
                    </Border>

                    <!-- ComboBoxes container -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">

                        <!-- First ComboBox -->
                        <StackPanel Margin="10">
                            <TextBlock Text="Select AI Model" Margin="0,0,0,5" TextAlignment="Center"/>
                            <Border BorderBrush="Black" BorderThickness="1">
                                <ComboBox x:Name="ModelComboBox" 
                                          Width="150" 
                                          Height="25" 
                                          BorderThickness="0"
                                          DisplayMemberPath="ModelName" 
                                          SelectedValuePath="Id"/>
                            </Border>
                        </StackPanel>

                        <!-- Second ComboBox -->
                        <StackPanel Margin="10">
                            <TextBlock Text="Select Language" Margin="0,0,0,5" TextAlignment="Center"/>
                            <Border BorderBrush="Black" BorderThickness="1">
                                <ComboBox x:Name="LanguageComboBox" 
                                          Width="120" 
                                          Height="25" 
                                          BorderThickness="0"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="Id"/>
                            </Border>
                        </StackPanel>

                        <!-- Third ComboBox -->
                        <StackPanel Margin="10">
                            <TextBlock Text="Select Type" Margin="0,0,0,5" TextAlignment="Center"/>
                            <Border BorderBrush="Black" BorderThickness="1">
                                <ComboBox x:Name="TypeComboBox" Width="120" Height="25" BorderThickness="0">
                                    <ComboBoxItem Content="Class"/>
                                    <ComboBoxItem Content="Function" IsSelected="True"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Next Button -->
                    <Border BorderBrush="Black" BorderThickness="1" Width="160" Height="40">
                        <Button Content="next" BorderThickness="0" Click="NextButton_Click"/>
                    </Border>

                </StackPanel>
            </Grid>
        </ContentControl>
    </Grid>
</Window>