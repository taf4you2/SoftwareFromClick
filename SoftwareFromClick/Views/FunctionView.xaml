<UserControl x:Class="SoftwareFromClick.Views.FunctionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid>

        
        
        
        <!-- Right column - Function Form with ScrollViewer -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            
            
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Preview Panel -->
                    <RowDefinition Height="*"/>
                    <!-- Ten wiersz zajmie całą pozostałą przestrzeń -->
                </Grid.RowDefinitions>
             
                <Border x:Name="Loading" 
                          Background="#CC000000" 
                          Visibility="Collapsed"
                          Grid.ColumnSpan="2">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Sending request to AI model..." 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Margin="0,0,0,20"/>
                        <TextBlock Text="Please wait for response..." 
                          Foreground="White" 
                          FontSize="14"
                          TextAlignment="Center"/>
                    </StackPanel>
                </Border>


                <!-- Header -->
                <TextBlock Grid.Row="0" Text="Define Function" FontSize="20" FontWeight="Bold"/>

                <!-- Function Name -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Function Name:" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBox Height="30" BorderThickness="0" ToolTip="Enter function name, e.g. CalculateSum"/>
                    </Border>
                </StackPanel>

                <!-- Function Type -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="Function Type:" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <ComboBox Height="30" BorderThickness="0" ToolTip="Select access modifier and type">
                            <ComboBoxItem Content="public"/>
                            <ComboBoxItem Content="private"/>
                            <ComboBoxItem Content="protected"/>
                            <ComboBoxItem Content="static"/>
                            <ComboBoxItem Content="async"/>
                        </ComboBox>
                    </Border>
                </StackPanel>

                <!-- Functionalities -->
                <StackPanel Grid.Row="6">
                    <TextBlock Text="Functionalities:" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBox x:Name="FunctionalitiesTextBox"
                                 Height="100" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 BorderThickness="0"
                                 ToolTip="Describe what the function should do"/>
                    </Border>
                </StackPanel>

                <!-- Input Parameters -->
                <StackPanel Grid.Row="8">
                    <TextBlock Text="Input Parameters:" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBox Height="80" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 BorderThickness="0"
                                 ToolTip="e.g. int number, string text"/>
                    </Border>
                </StackPanel>

                <!-- Return Type -->
                <StackPanel Grid.Row="10">
                    <TextBlock Text="Return Type:" Margin="0,0,0,5"/>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBox Height="30" BorderThickness="0" ToolTip="e.g. void, int, string, bool"/>
                    </Border>
                </StackPanel>

                <!-- Preview Prompt Panel -->
                <Border x:Name="PromptPreviewPanel" 
                        Grid.Row="12" 
                        BorderBrush="Black" 
                        BorderThickness="1" 
                        Visibility="Collapsed"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Prompt Preview:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Border BorderBrush="Black" BorderThickness="1">
                            <TextBox x:Name="PromptPreviewTextBox"
                                       Height="200" 
                                       AcceptsReturn="True" 
                                       TextWrapping="Wrap" 
                                       VerticalScrollBarVisibility="Auto"
                                       BorderThickness="0"
                                       IsReadOnly="False"
                                       Background="White"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="13" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            Margin="0,20,0,0">
                    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,10,0">
                        <Button Content="Back" Width="100" Height="35" BorderThickness="0" Click="BackButton_Click"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,10,0">
                        <Button Content="Preview Prompt" Width="120" Height="35" BorderThickness="0" Click="PreviewPromptButton_Click"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Button Content="Generate Code" Width="120" Height="35" BorderThickness="0" Click="GenerateCodeButton_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>